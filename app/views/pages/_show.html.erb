<div class="container">
  <div class="navbar">
    <div class="navbar-inner navbar-fixed-top">
      <div class="pull-left">
	<a href="/"><img src="/images/Red_Hat_RGB_125px.png"></a>
      </div>
      <div class="pull-right">
	  <h4><i>RNOC</i> - <%= @page.title %></h4>
      </div>
    </div>
  </div>
</div>


<% if notice %>
  <div class="container">
  <div class="alert alert-info"><%= notice %></div>
  </div>
<% end %>

<div class="row-fluid">
  <% @pageboxes.each do |pb| %>
    <div class="span4 pagebox_container">
      <div class="navbar-more-inner"><%= pb.title %>
		<%= link_to '[x]', pb, :confirm => 'Remove this item?', :method => :delete, :class => 'close-inner' %>
		<%= link_to '[e]', edit_pagebox_path(pb), :class => 'close-inner' %>
      </div>
      <%= pb.content.html_safe %>
    </div>
  <% end %>
</div>


<div class="container">
  <div class="navbar">
    <div class="navbar-inner navbar-fixed-bottom">
      <ul class="nav">
	<li>
	  <%= link_to({:controller => :pageboxes, :action => :new, :id => @page.id}, {:class => 'btn btn-small'}) do %>
	    <i class="icon-plus icon-black"></i> <% end %>
	</li>
	<li>
	  <%= link_to(edit_page_path(@page), {:class => 'btn btn-small'}) do %>
	    <i class="icon-pencil icon-black"></i> <% end %>
	</li>

	<li>
	  <%=  link_to(@page, {:confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-small'}) do %>
	    <i class="icon-trash icon-red"></i> <% end %>
	</li>
	<li>
	  &nbsp;
	</li>
	<li>
      <%= link_to("/pages/#{@page.prev.id}", {:class => 'btn btn-small', :id => 'prev'}) do %>
	    <i class="icon-step-backward icon-black"></i> <% end %>
	</li>
	<li>
      <%= link_to("/pages/#{@page.id}", {:class => 'btn btn-small btn-inverse', :id => 'stop'}) do %>
	    <i class="icon-stop icon-white"></i> <% end %>
	</li>
	<li>
      <%= link_to("/pages/#{@page.id}/cycle", {:class => 'btn btn-small btn-success', :id => 'play'}) do %>
	    <i class="icon-play icon-black"></i> <% end %>
	</li>
	<li>
      <%= link_to("/pages/#{@page.next.id}", {:class => 'btn btn-small', :id => 'next'}) do %>
	    <i class="icon-step-forward icon-black"></i> <% end %>
	</li>
      </ul>
    </div>
  </div>
</div>
