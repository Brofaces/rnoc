<META HTTP-EQUIV=Refresh CONTENT="10; URL=<%= "/pages/#{@next.id}/cycle" %>">

<div class="container">
  <div class="navbar-inner">
    <h1><%= @page.title %></h1>
  </div>

  <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
  <% end %>


  <!-- instead of links... they should be displayed -->

  <div class="allthepageboxes">
    <% @pageboxes.each do |pb| %>
      <!--    <p><%= link_to pb.title, pb %></p> -->
      <div class="pagebox_container">
        <div class="navbar-inner"><%= pb.title %></div>
        <%= pb.content.html_safe %>
      </div>

    <% end %>
  </div>
</div>

<div class="container">
  <%= link_to 'New pagebox', :controller => :pageboxes, :action => :new, :id => @page.id %>
  <%= link_to 'Edit', edit_page_path(@page) %>
  <%= link_to 'Back', {:controller => :home, :action => 'index'} %>
</div>
