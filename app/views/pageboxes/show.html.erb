<div class="container">
  <h1><%= @pagebox.title %></h1>

  <% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
  <% end %>

  <p>
    <%= @pagebox.content.html_safe %>
  </p>

  <%= link_to 'Edit', edit_page_pagebox_path(@pagebox), :class => 'btn' %>
  <%= link_to 'Back', "/pages/#{@pagebox.page_id}", :class => 'btn' %>
</div>
