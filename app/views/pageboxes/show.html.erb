<div class="container">

<div class="hero-unit">
	<h1><%= @pagebox.title %></h1>
</div>

<% if notice %>
	<div class="alert alert-info">
	<%= notice %>
	</div>
<% end %>

<p>
  <b>Title:</b>
  <%= @pagebox.title %>
  <b>Content:</b>
  <%= @pagebox.content.html_safe %>
</p>

<%= link_to 'Edit', edit_pagebox_path(@pagebox) %> |
<%= link_to 'Back', "/pages/#{@pagebox.page_id}" %>
</div>
